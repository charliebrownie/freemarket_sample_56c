        .field
          = f.label :番地,class: 'title'
          = f.label :必須,class: 'need'
          %br/
          = f.text_field :banch,placeholder: "例)青山1-1-1" ,class: 'forms'

        .field
          = f.label :建物名,class: 'title'
          = f.label :任意,class: 'any'
          %br/
          = f.text_field :building,placeholder: "例)柳ビル103" ,class: 'forms'

        .field
          = f.label :電話,class: 'title'
          = f.label :任意,class: 'any'
          %br/
