.address
  .address__areaup
    .address__areaup__logo
      住所入力
  .address__areadown
    .address__areadown__form
      = form_with model: @user do |f|
        .field
          = f.label :お名前,class: 'title'
          = f.label :必須,class: 'need'
          %br/
          = f.text_field :finalname,placeholder: "例)山田" ,class: 'forms'
          = f.text_field :firstname,placeholder: "例)彩" ,class: 'forms'

        .field
          = f.label :お名前カナ,class: 'title'
          = f.label :必須,class: 'need'
          %br/
          = f.text_field :finalkana,placeholder: "例)ヤマダ" ,class: 'forms'
          = f.text_field :firstkana,placeholder: "例)アヤ" ,class: 'forms'
        
        .field
          = f.label :郵便番号,class: 'title'
          = f.label :必須,class: 'need'
          %br/
          = f.text_field :address,placeholder: "例)123-4567" ,class: 'forms'

        .field
          = f.label :都道府県,class: 'title'
          = f.label :必須,class: 'need'
